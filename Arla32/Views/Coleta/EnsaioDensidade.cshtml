                    <td><input type="text" name="densidade_enc" id="densidade_enc" class="form-control input" value="@Model.densidade_enc" /></td>
                    <td><input type="text" name="temp_final" id="temp_final" class="form-control input" value="@Model.temp_final" /></td>
                </tr>
            </table>
            <br />
            <table class="table table-bordered border-secondary  table-sm">
                <tr class="tabela">
                    <td rowspan="2">Fórmula</td>
                    <td colspan="2">Conversão - Cálculo de temperatura para 15 °C</td>
                </tr>
                <tr>
