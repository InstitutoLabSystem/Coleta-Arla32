@model ColetaModel.ArlaAlcalinidade
@{
    ViewData["Title"] = "Ensaio De Alcalinidade ";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .input {
            border: none;
        }

        .table {
            margin: 0 auto;
            border: 1px solid black;
            border-collapse: collapse;
            width: 80%;
        }

        .texto-central {
            text-align: center;
        }

        .tabela {
            background-color: #800000;
            color: white;
            text-align: center;
        }

        .imagem {
            max-width: 200px;
            height: 100px;
            display: block;
            margin: 0 auto;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <form method="post" asp-controller="Coleta" asp-action="SalvarAlcalinidade" asp-route-os="@ViewData["os"]" asp-route-orcamento="@ViewData["orcamento"]">
        <table class="table table-bordered border-secondary  table-sm">
            <tr>
                <td rowspan="3" class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    <img src="https://www.labsystem-nuvem.com.br/imagens_arq/imagens/img/LabSystem.png" class="imagem" />
                </td>
                <td colspan="3" class="texto-central" style="background-color: #800000; color:white;">COLETA DE DADOS</td>
                <td rowspan="2" class="col-xs-2 col-sm-2 col-md-2 col-lg-2" style="background-color: #800000; color:white;"> N° da OS : @ViewBag.OS</td>
            </tr>
            <tr class="tabela">
                <td colspan="3" class="texto-central "> ENSAIO DE ARLA 32</td>
            </tr>
            <tr>
                <td style="background-color: #800000; color:white;">Data Inicio:</td>
                <td><input type="date" class="form-control input " name="data_ini" /></td>
                <td style="background-color: #800000; color:white;">Data Término:</td>
                <td><input type="date" class="form-control input " name="data_term" /></td>
            </tr>
            <tr class="texto-central">
                <td colspan="5">
                    <b>Ensaio a ser realizado:</b> Determinação da Alcalinidade - Anexo D - IT.119/Q
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <b>Norma:</b> ABNT NBR ISO 22241-2
                </td>
            </tr>
            <tr>
                <td colspan="5"> Np:</td>
            </tr>
            <tr>
                <td colspan="5">Descrição:</td>
            </tr>
        </table>
        <br />
        <table class="table table-bordered border-secondary  table-sm">
            <tr class="tabela">
                <td colspan="3">Procedimento ensaio preliminar</td>
                <td colspan="4">Procedimento ensaio preliminar</td>
            </tr>
            <tr class="tabela">
                <td>Massa Amostra</td>
                <td>Vol. titulado</td>
                <td>Resultado Final</td>
                <td>Massa Amostra</td>
                <td>Vol. titulado</td>
                <td>Resultado Final Limete ate 0,2%</td>
            </tr>
            <tr>
                <td rowspan="2"><input type="text" name="pre_massa_amostra" class="form-control input" style=" height:80px;" /></td>
                <td rowspan="2"><input type="text" name="pre_vol_titulado" class="form-control input" style=" height:80px;" /></td>
                <td rowspan="2"><input class="form-control input" style="height:80px;" readonly /></td>
                <td><input type="text" name="det_massa_amostra1" class="form-control input " /></td>
                <td><input type="text" name="det_vol_titulado1" class="form-control input " /></td>
                <td rowspan="2"><input class="form-control input" style=" height:80px;" readonly /></td>
            </tr>

            <tr>
                <td><input type="text" name="det_massa_amostra2" class="form-control input " /></td>
                <td><input type="text" name="det_vol_titulado2" class="form-control input " /></td>
            </tr>
        </table>
        <br />
        <table class="table table-bordered border-secondary  table-sm">
            <tr class="tabela">
                <td colspan="3">Materiais Utilizados </td>
            </tr>
            <tr class="tabela">
                <td>Materia-prima</td>
                <td>Lote</td>
                <td>Validade</td>
            </tr>
            <tr>
                <td><input type="text" name="mat_prima" class="form-control input " /></td>
                <td><input type="text" name="mat_lote" class="form-control input " /></td>
                <td><input type="date" name="mat_validade" class="form-control input " /></td>
            </tr>
        </table>
        <br />

        <table class="table table-bordered border-secondary  table-sm">
            <tr class="tabela texto-central ">
                <td colspan="6">Código de Instrumento Utilizados</td>
            </tr>
            <tr class="tabela texto-central">
                <td>Descrição</td>
                <td>Código</td>
                <td>Validade</td>
                <td>Descrição</td>
                <td>Código</td>
                <td>Validade</td>
            </tr>
            <tr>
                <td><input type="text" name="inst_desc1" class="form-control input " /></td>
                <td><input type="text" name="inst_cod1" class="form-control input " /></td>
                <td><input type="date" name="inst_data1" class="form-control input " /></td>
                <td><input type="text" name="inst_desc1_1" class="form-control input " /></td>
                <td><input type="text" name="inst_cod1_1" class="form-control input " /></td>
                <td><input type="date" name="inst_data1_1" class="form-control input " /></td>
            </tr>
            <tr>
                <td><input type="text" name="inst_desc2" class="form-control input " /></td>
                <td><input type="text" name="inst_cod2" class="form-control input " /></td>
                <td><input type="date" name="inst_data2" class="form-control input " /></td>
                <td><input type="text" name="inst_desc2_2" class="form-control input " /></td>
                <td><input type="text" name="inst_cod2_2" class="form-control input " /></td>
                <td><input type="date" name="inst_data2_2" class="form-control input " /></td>
            </tr>
            <tr>
                <td><input type="text" name="inst_desc3" class="form-control input " /></td>
                <td><input type="text" name="inst_cod3" class="form-control input " /></td>
                <td><input type="date" name="inst_data3" class="form-control input " /></td>
                <td><input type="text" name="inst_desc3_3" class="form-control input " /></td>
                <td><input type="text" name="inst_cod3_3" class="form-control input " /></td>
                <td><input type="date" name="inst_data3_3" class="form-control input " /></td>
            </tr>
            <tr>
                <td><input type="text" name="inst_desc4" class="form-control input " /></td>
                <td><input type="text" name="inst_cod4" class="form-control input " /></td>
                <td><input type="date" name="inst_data4" class="form-control input " /></td>
                <td><input type="text" name="inst_desc4_4" class="form-control input " /></td>
                <td><input type="text" name="inst_cod4_4" class="form-control input " /></td>
                <td><input type="date" name="inst_data4_4" class="form-control input " /></td>
            </tr>
        </table>
        <br />
        <table class="table table-bordered border-secondary  table-sm">
            <tr class="tabela">
                <td colspan="4">Equipamento e Dispositivos:</td>
            </tr>
            <tr>
                <td>De:</td>
                <td><input type="text" name="equip_de" class="form-control input " /></td>
                <td>EE:</td>
                <td><input type="text" name="equip_ee" class="form-control input " /></td>
            </tr>
        </table>
        <br />
        <table class="table table-bordered border-secondary  table-sm">
            <tr class="tabela">
                <td colspan="4">Observações</td>
            </tr>
            <tr>
                <td><textarea type="text" name="obs" class="form-control input"></textarea></td>
            </tr>
        </table>
        <Br />
        <table class="table table-bordered border-secondary  table-sm">
            <tr class="tabela">
                <td colspan="1">Executado Por:</td>
                <td colspan="2">Auxiliado Por:</td>
            </tr>
            <tr>
                <td><input type="text" name="executado_por" class="form-control input " /></td>
                <td><input type="text" name="auxiliado_por" class="form-control input " /></td>
            </tr>
        </table>
        <br />
        <div class="d-grid gap-2 d-flex justify-content-center">
            <button type="submit" value="SalvarAlcalinidade" class="btn btn-success btn btn-primary btn-md">Salvar Coleta</button>
        </div>
    </form>
    @section Scripts {
        @if (TempData.ContainsKey("Mensagem"))
        {
            <script>

                alert('@Html.Raw(TempData["Mensagem"])');
            </script>
        }
    }
</body>
</html>
