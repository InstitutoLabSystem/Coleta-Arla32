@model List<lotesModel.ArlaLotes>

<head>
    <meta charset="UTF-8">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="css/estilos.css">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<form class="form-inline" asp-controller="Lotes" asp-action="ListarLotes" method="post" asp-route-os="@ViewData["OS"]">
    <div class="container mt-4">
        <div class="row">
            <label class="form-label"> <strong> Selecionar Anexo </strong></label>
            <div class="col-md-9">

                <select class="form-select" name="escolha" aria-label="Default select example">
                    <option selected></option>
                    <option value="ANEXO C">Anexo C</option>
                    <option value="ANEXO D">Anexo D</option>
                    <option value="ANEXO E">Anexo E</option>
                    <option value="ANEXO F">Anexo F</option>
                    <option value="ANEXO G">Anexo G</option>
                    <option value="ANEXO H">Anexo H</option>
                    <option value="ANEXO I">Anexo I</option>
                    <option value="ANEXO J">Anexo J</option>
                    <option value="DENSIDADE">Densidade</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary  w-100  btn-block">Pesquisar</button>
            </div>
        </div>
    </div>
</form>

@if(Model != null)
{

    <form class="form-inline" asp-controller="Lotes" asp-action="Editar" method="post" asp-route-os="@ViewData["OS"]">
        
        <table style="width: 100%;">
      <tr>
         <th>Id</th>
         <th>Lote</th>
         <th>Anexo</th>
      </tr>

                @for (var j = 0; j < Model.Count; j++)
                {
                    <tr>
                        <td> <input type='text' name='Id' value='@Model[j].id' readonly/></td>
                    <td> <input type='text' name='lote_@Model[j].id' value='@Model[j].lote' /></td>
                    <td> <input type='text' name='anexo_@Model[j].id' value='@Model[j].anexo' /></td>
                    
                    <td>
                        <a role="submit" target="_blank" class="btn btn-success" asp-controller="Lotes" asp-action="Editar" asp-route-id="@Model[j].id"> Editar </a>
                    </td>
                

                    </tr>
                    }
                
    </table>
     </form>

} 