<body>

     <h1> Coleta Arla32 </h1>
    <form class="form-inline" asp-controller="Home" asp-action="BuscarOS" method="post">
        <div class="container mt-4">
            <div class="row">
              
                @if (Model != null)
                {
                    @for (var i = 0; i < Model.Count; i++)
                    //contagem do meu for se retornad algo do banco.
                    {
                        var resultado = Model[i];
                        //int teste = i + 1;
                        <div class="col-md-4">
                            <label class="form-label"> <strong> Ordem de Serviço </strong></label>
                            <input type="text" class="form-control" id="OS" name="OS">
                        </div>
                        <div class="col-md-3">
                            <label  class="form-label"> <strong> Orçamento </strong></label>
                            <input type="text" class="form-control" id="orcamento" name="orcamento" value="@resultado.Orcamento"readonly>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary  w-100  btn-block">Pesquisar</button>
                        </div>
                    }
                }
                else
                {
                    <div class="col-md-4">
                        <label class="form-label"> <strong> Ordem de Serviço </strong></label>
                        <input type="text" class="form-control" id="OS" name="OS">
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary  w-100  btn-block">Pesquisar</button>
                    </div>

                }
            </div>
        </div>
    </form>

